<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <services>
        <default public="false">
        </default>

        <service id="Kassko\ObjectHydrator\Config">
            <argument>%kassko_object_hydrator.config%</argument>
        </service>

        <service id="Kassko\ObjectHydrator\ClassMetadata\Repository\ReflectionClass"/>

        <service id="Kassko\ObjectHydrator\ClassMetadataLoader\ClassMetadataLoader">
            <argument type="service" id="Kassko\ObjectHydrator\LoaderResolver"/>
        </service>

        <service id="Kassko\ObjectHydrator\LoaderResolver">
            <argument type="tagged" tag="kassko_object_hydrator.metadata_loader" />
        </service>

        <service id="Kassko\ObjectHydrator\ClassMetadataLoader\DoctrineAnnotationLoader">
            <argument type="service" id="annotation_reader"/>
            <call method="setConfig">
                <argument type="service" id="Kassko\ObjectHydrator\ClassMetadataConfig"/>
            </call>
            <call method="setReflectionClassRepository">
                <argument type="service" id="Kassko\ObjectHydrator\ClassMetadata\Repository\ReflectionClass"/>
            </call>

            <tag name="kassko_object_hydrator.metadata_loader" />
        </service>

        <service id="Kassko\ObjectHydrator\ClassMetadataConfig">
            <argument>%kassko_object_hydrator.config_class_metadata%</argument>
        </service>

        <service id="Kassko\ObjectHydrator\ModelBuilder">
            <argument type="service" id="Kassko\ObjectHydrator\ClassMetadata\Repository\DataSource"/>
            <argument type="service" id="Kassko\ObjectHydrator\ClassMetadata\Repository\Expression"/>
            <argument type="service" id="Kassko\ObjectHydrator\ClassMetadata\Repository\Method"/>
            <argument type="service" id="Kassko\ObjectHydrator\ClassMetadata\Repository\ReflectionClass"/>
            <argument type="service" id="Kassko\ObjectHydrator\MethodInvoker"/>
        </service>

        <service id="Kassko\ObjectHydrator\ClassMetadata\Repository\DataSource"/>
        <service id="Kassko\ObjectHydrator\ClassMetadata\Repository\Expression"/>
        <service id="Kassko\ObjectHydrator\ClassMetadata\Repository\Method"/>

        <service id="Kassko\ObjectHydrator\ModelLoader">
            <argument type="service" id="Kassko\ObjectHydrator\ClassMetadataLoader\ClassMetadataLoader"/>
            <argument type="service" id="Kassko\ObjectHydrator\ModelBuilder"/>
        </service>

        <service id="Kassko\ObjectHydrator\ExpressionContext"/>

        <service id="Kassko\ObjectHydrator\ExpressionEvaluator">
            <argument type="service" id="Kassko\ObjectHydrator\ExpressionContext"/>
            <argument>%kassko_object_hydrator.config_data_source_expressions%</argument>
            <argument />
        </service>

        <service id="Kassko\ObjectHydrator\MethodInvoker">
            <argument type="service" id="Kassko\ObjectHydrator\ExpressionEvaluator"/>
            <argument type="service" id="Kassko\ObjectHydrator\FrameworkBridge\Symfony\ServiceLocator"/>
        </service>

        <service id="Kassko\ObjectHydrator\DataFetcher">
            <argument type="service" id="Kassko\ObjectHydrator\MethodInvoker"/>
        </service>

        <service id="Kassko\ObjectHydrator\PropertyCandidatesResolver">
            <argument type="service" id="Kassko\ObjectHydrator\ExpressionEvaluator"/>
            <argument type="service" id="Kassko\ObjectHydrator\MethodInvoker"/>
        </service>

        <service id="Kassko\ObjectHydrator\MemberAccessStrategyFactory"/>

        <service id="Kassko\ObjectHydrator\ObjectLoadabilityChecker"/>

        <service id="Kassko\ObjectHydrator\Hydrator">
            <argument type="service" id="Kassko\ObjectHydrator\ModelLoader"/>
            <argument type="service" id="Kassko\ObjectHydrator\MemberAccessStrategyFactory"/>
            <argument type="service" id="Kassko\ObjectHydrator\IdentityMap"/>
            <argument type="service" id="Kassko\ObjectHydrator\ObjectLoadabilityChecker"/>
            <argument type="service" id="Kassko\ObjectHydrator\DataFetcher"/>
            <argument type="service" id="Kassko\ObjectHydrator\MethodInvoker"/>
            <argument type="service" id="Kassko\ObjectHydrator\ExpressionContext"/>
            <argument type="service" id="Kassko\ObjectHydrator\EssentialDataProvider"/>
            <argument type="service" id="Kassko\ObjectHydrator\ExpressionEvaluator"/>
            <argument type="service" id="Kassko\ObjectHydrator\Config"/>
        </service>

        <service id="Kassko\ObjectHydrator\IdentityMap">
            <argument type="service" id="Kassko\ObjectHydrator\ObjectLoadabilityChecker"/>
        </service>

        <service id="Kassko\ObjectHydrator\EssentialDataProvider">
            <argument type="service" id="Kassko\ObjectHydrator\DataFetcher"/>
            <argument type="service" id="Kassko\ObjectHydrator\MemberAccessStrategyFactory"/>
            <argument type="service" id="Kassko\ObjectHydrator\FrameworkBridge\Symfony\ServiceLocator"/>
        </service>

        <service id="Kassko\ObjectHydrator\FrameworkBridge\Symfony\ServiceLocator">
            <argument type="service" id="service_container"/>
        </service>

        <service id="Kassko\ObjectHydrator\RegistryInitializer" public="true">
            <argument type="service" id="Kassko\ObjectHydrator\Hydrator"/>
            <argument type="service" id="logger" on-invalid="null"/>
        </service>

    </services>

</container>
